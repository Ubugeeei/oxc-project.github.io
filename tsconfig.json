{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".vitepress/**/*"],
  "exclude": ["node_modules", "build"]
}
